<div class="py-2 border border-black p-4">
  <%= form_with(model: quote) do |form| %>
    <% if quote.errors.any? %>
      <div class="border border-rose-900 p-2">
        <ul>
          <% quote.errors.each do |error| %>
            <li class="text-rose-900"><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='flex justify-between'>
      <div class='w-full'>
        <%= form.label :text, style: "display: block", class: "underline" %>
        <%= form.text_field :text, class: "border border-black w-full h-8"%>
      </div>

      <div class="pt-6 ml-2">
        <%= form.submit class: "border border-black h-8 px-2" %>
      </div>  
    </div>
  <% end %>
</div>
