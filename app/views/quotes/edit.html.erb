<div class="border border-black p-4">
  <div class="underline">Editing quote</div>

  <%= turbo_frame_tag "quote_#{@quote.id}" do%>
    <div class="py-2">
        <%= render "form", quote: @quote %>
    </div>
  <% end %>

  <div class="pt-2 flex space-x-2">
    <%= link_to "Show this quote", @quote, class: "border border-black p-2" %>
    <%= link_to "Back to quotes", quotes_path, class: "border border-black p-2" %>
  </div>
</div>
