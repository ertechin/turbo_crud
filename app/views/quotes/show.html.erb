<div class="border border-black p-4">
  <p style="color: green"><%= notice %></p>
  <div class="flex border border-black p-2">
    <%= render @quote %>
    <div class="pl-2 flex space-x-2">
      <%= link_to "Edit", edit_quote_path(@quote), class:"border border-black" %>
      <%= button_to "Destroy", @quote, method: :delete, class:"border border-black" %>
    </div>
  </div>  

  <div class="pt-4">
    <%= link_to "Back To Quotes", quotes_path, class:"border border-black p-2" %>
  </div>  
</div>
